<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_list_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="56dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cart_confirmation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:contentDescription="@string/confirm"
        app:layout_constraintBottom_toBottomOf="@+id/cart_list_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/cart_list_recycler_view"
        app:srcCompat="@android:drawable/checkbox_on_background"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>